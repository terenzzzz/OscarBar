-if session[:role] == 'Admin'
  %br/
  .d-flex.justify-content-center
    %h3 #{@payment.name}
  .d-flex.justify-content-center  
    %p= image_tag @payment.proof, class:'img-fluid'
  = link_to '返回', payments_path, class:'btn btn-primary'
  = link_to '编辑', edit_payment_path(@payment), class:'btn btn-primary'

-if session[:role] == 'User'
  %br/
  .d-flex.justify-content-center
    %h1.blue-shadow #{@payment.name}
  .d-flex.justify-content-center  
    %p= image_tag @payment.proof, class:'img-fluid'
  .d-flex.justify-content-center
    %h4.text-white 请支付(£): #{@total.round(2)} 或者 (¥): #{@rmb}
 
  %br/
  = link_to '取消支付', '/payments/cancel_payment', class:'btn btn-primary'
  = link_to '上传支付截图', "/temperates/#{@temperate.id}/edit", class:'btn btn-primary'
  