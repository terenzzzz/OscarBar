-if @cart = current_user.cart
-else
  - @cart = current_user.create_cart
  - @cart.update_attribute(:total_price, 0)

%br/
.row 
  .col-4
    = image_tag 'open.png', class:'img-fluid'
.row 
  .col-6
    %h1.blue-shadow 欢迎光临OscarBar!
  .col-3
  .col-2
    =link_to "/pages/check_out" ,class:"btn btn-primary position-relative"do
      .bi.bi-cart4.display-7
      %span.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-danger
        =@total_quantity
        %span.visually-hidden unread messages
%br/

%h1.text-white Cocktail 鸡尾酒:
.row
  - @cocktail.each do |cocktail|
    .col-6.col-md-3.mb-2
      .card.h-100.bg-light
        .card-img-top.p-2 
          = image_tag cocktail.images[0], class:'img-fluid'
          -# %span.position-absolute.top-0.start-100.translate-middle.p-3.bg.warning.rounded-circle
          -#   %span.bi.bi-hand-thumbs-up-fill.display-6
        .card-body
          %p.fw-bold #{cocktail.name}
          -# %p description:  #{cocktail.description}
          %p 价格(£):  #{cocktail.price}
          = link_to '加入购物车', add_cart_buyer_path(cocktail)


%br/
%br/

%h1.text-white Whisky 威士忌:
.row
  - @whisky.each do |whisky|
    .col-6.col-md-3.mb-2
      .card.h-100.bg-light
        .card-img-top.p-2
          = image_tag whisky.images[0], class:'img-fluid'
        .card-body
          %p.fw-bold #{whisky.name}
          -# %p description:  #{whisky.description}
          %p 价格(£):  #{whisky.price}
          = link_to '加入购物车', add_cart_buyer_path(whisky)

%br


