%h1 Cocktail:
.row
  - @cocktail.each do |cocktail|
    .col-4
      .card.h-100
        .card-img-top
          = image_tag cocktail.images[0], class:'img-fluid'
        .card-body
          %p name:  #{cocktail.name}
          %p description:  #{cocktail.description}
          %p price:  #{cocktail.price}
          = link_to '查看', cocktail
          = link_to '编辑', edit_product_path(cocktail)
          = link_to '删除', cocktail, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br/
%br/

%h1 Whisky:
.row
  - @whisky.each do |whisky|
    .col-4
      .card.h-100
        .card-img-top
          = image_tag whisky.images[0], class:'img-fluid'
        .card-body
          %p name:  #{whisky.name}
          %p description:  #{whisky.description}
          %p price:  #{whisky.price}
          = link_to 'Show', whisky
          = link_to 'Edit', edit_product_path(whisky)
          = link_to 'Destroy', whisky, :method => :delete, :data => { :confirm => 'Are you sure?' }
